<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RVRowStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_stud_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/chk_attendance"
        tools:text="Shashanth" />

    <CheckBox
        android:id="@+id/chk_attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/lbl_reg_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_stud_name"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@+id/chk_attendance"
        tools:text="100CS12037" />
</RelativeLayout>